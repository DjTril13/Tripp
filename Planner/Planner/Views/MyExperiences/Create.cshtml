@model Planner.Models.MyExperiences

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="~/Scripts/Index.js"></script>

<table>
    <tr>
        <td>
            <div id="uploadMsg"></div>
        </td>
    </tr>
    <tr>
        <td>
            <div>Profile Photo: </div>
            @foreach (var i in Model.MyImages)
            {
                if (i.ImageFilePath != null)

                {
                    string _url = @i.ImageFilePath;
                  <img src="@Url.Content(_url)" style="width: 100%" />
                }
            }
                <div>
                    <input type="file" id="fileOne" name="files[0]" />
                </div>
            </td>
    </tr>
    <tr>
        <td>
            <button type="button" id="btnUpload">UPLOAD FILE</button>
            @Html.Hidden("FileUploadUrl", Url.Action("UploadFiles", "MyExperiences", new { Model.MyImages }))
        </td>
    </tr>
</table>


